{% extends '@FormBuilder/layout_funnel.html.twig' %}

{% block funnel_content %}

    <h1>Simple Layout Layer</h1>

    {% if layout is not null %}
        {{ pimcore_inc(layout) }}
    {% endif %}

    {% if funnelActions.hasByName('button1') %}
        <a href="{{ funnelActions.getByName('button1').path }}" class="btn btn-default">Go!</a>
    {% endif %}

{% endblock funnel_content %}